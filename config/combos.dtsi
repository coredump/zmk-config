#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

// Combos overlapping HRMs are set up as hold-taps themselves to allow for instantaneous
// chording of mods. Custom hold-tap instances can be bootstrapped on the go using the
// 8-argument version of ZMK_COMBO defined in base.keymap.
ZMK_MACRO(esc, bindings = <&kp ESC>;) // target of the combo can't be a kp

ZMK_COMBO(esc,        &esc,             RM2 RM1,     BASE MAC GAMING, COMBO_TERM_FAST, COMBO_IDLE_FAST, RS(RCTRL), KEYS_L)
ZMK_COMBO(lesc,       &esc,             LM2 LM1,     BASE MAC GAMING, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(LCTRL), KEYS_R)
//ZMK_COMBO(nword,      &num_dance,       RM1 RM3,     BASE MAC GAMING, COMBO_TERM_FAST, COMBO_IDLE_FAST, RA(RSFT), KEYS_L KEYS_L)
//ZMK_COMBO(lnword,     &num_dance,       LM1 LM3,     BASE MAC GAMING, COMBO_TERM_FAST, COMBO_IDLE_FAST, LA(LSFT), KEYS_L KEYS_R)

//ZMK_COMBO(cword,      &caps_word,       LM1 RM1,     BASE MAC GAMING, COMBO_TERM_FAST, COMBO_IDLE_FAST, LS(RSFT), KEYS_L KEYS_R)

#ifndef CONFIG_TRACKBALL
ZMK_COMBO(mouse,      &smart_mouse,     LB3 LB4,     BASE MAC GAMING, COMBO_TERM_FAST, COMBO_IDLE_FAST)
#endif

ZMK_COMBO(leader,      &leader,         RT1 RT3,     BASE MAC GAMING, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - left hand */
ZMK_COMBO(cut,        &kp LC(X),        LB3 LB1,         BASE GAMING,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,       &kp LC(C),        LB3 LB2,         BASE GAMING,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste,      &kp LC(V),        LB2 LB1,         BASE GAMING,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(mcut,       &kp LG(X),        LB3 LB1,     	         MAC,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,       &kp LG(C),        LB3 LB2,                 MAC,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(mpaste,     &kp LG(V),        LB2 LB1,                 MAC,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
/* Horizontal combos - right hand */
ZMK_COMBO(quote,      &kp SQT,          RT1 RT2,     BASE MAC GAMING,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(dquote,     &kp DQT,          RT2 RT3,     BASE MAC GAMING,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(qmark,      &kp QMARK,        RB2 RB3,     BASE MAC GAMING,   COMBO_TERM_FAST, COMBO_IDLE_FAST)

ZMK_COMBO(xquote,     &kp RA(SQT),      RT1 RT2,               LOWER,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(xdquote,    &kp RA(DQT),      RT2 RT3,               LOWER,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(xcaret,     &kp RA(CARET),    RT0 RT2,               LOWER,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(xtilde,     &kp RA(TILDE),    RT0 RT3,               LOWER,   COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(xgrave,     &kp RA(GRAVE),    RT1 RT3,               LOWER,   COMBO_TERM_FAST, COMBO_IDLE_FAST)

