#define COMBO_TERM_FAST 18
#define COMBO_TERM_SLOW 30

#define COMBO_IDLE_FAST 150
#define COMBO_IDLE_SLOW 50

ZMK_COMBO(mouse, &smart_mouse, LM3 LM4,     BASE , COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - left hand */
ZMK_COMBO(cut,   &kp LC(X),    LF3 LF1,     BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(copy,  &kp LC(INS),  LF3 LF2,     BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(paste, &kp LS(INS),  LF2 LF1,     BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Horizontal combos - right hand */
ZMK_COMBO(del,   &kp DEL,      RT4 RT5,     BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(quote, &kp SQT,    RM1 RM2,     BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(dquote, &kp DQT,   RM2 RM3,     BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)
ZMK_COMBO(qmark, &kp QMARK,   RF3 RF4,     BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* Vertical combos left hand */
ZMK_COMBO(backslash, &kp BACKSLASH,  LM2 LB2,  BASE, COMBO_TERM_FAST, COMBO_IDLE_FAST)

/* toggle gaming layer */

ZMK_COMBO(gaming, &tog GAMING, LM2 RM2, ADJUST, COMBO_TERM_FAST, COMBO_IDLE_FAST)
